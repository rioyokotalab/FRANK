cmake_minimum_required(VERSION 3.5)
project(Boost
    VERSION @BOOST_VERSION@
)

add_library(boost INTERFACE)
target_include_directories(boost INTERFACE
    $<BUILD_INTERFACE:${CMAKE_SOURCE_DIR}/include>
    $<INSTALL_INTERFACE:include>
)
install(TARGETS boost EXPORT BoostTargets DESTINATION lib)

## Install instructions
include(CMakePackageConfigHelpers)
write_basic_package_version_file(
  BoostConfigVersion.cmake
  VERSION ${PACKAGE_VERSION}
  COMPATIBILITY ExactVersion
)
install(FILES
  "${CMAKE_CURRENT_BINARY_DIR}/BoostConfigVersion.cmake"
  DESTINATION ${CMAKE_INSTALL_PREFIX}/lib/cmake/Boost
)
# Create config file of Boost
# No public dependencies so a Config file with the targets is enough
install(EXPORT BoostTargets
  FILE BoostConfig.cmake
  NAMESPACE Boost::
  DESTINATION ${CMAKE_INSTALL_PREFIX}/lib/cmake/Boost
)
# Copy headers to install directory
install(
    DIRECTORY ${CMAKE_SOURCE_DIR}/include/boost
    DESTINATION include
)
