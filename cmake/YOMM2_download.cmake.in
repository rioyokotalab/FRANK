cmake_minimum_required(VERSION 3.5)
include(ExternalProject)
project(YOMM2Download)
ExternalProject_Add(YOMM2
    GIT_REPOSITORY      https://github.com/derpda/yomm2.git
    GIT_TAG             master
    GIT_PROGRESS        True
    SOURCE_DIR          "${CMAKE_SOURCE_DIR}/dependencies/yomm2"
    BINARY_DIR          "${CMAKE_CURRENT_BINARY_DIR}/yomm2-build"
    INSTALL_DIR         @DEPENDENCY_INSTALL_PREFIX@
    CMAKE_ARGS          -DCMAKE_INSTALL_PREFIX=<INSTALL_DIR>
                        -DCMAKE_BUILD_TYPE=Release
                        -DYOMM2_ENABLE_EXAMPLES=OFF
)